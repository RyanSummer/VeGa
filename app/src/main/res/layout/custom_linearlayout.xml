<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/custom_ll"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="55dp"
              android:background="@color/white"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_image"
            android:layout_width="@dimen/custom_linearlayout_left_image_size"
            android:layout_height="@dimen/custom_linearlayout_left_image_size"/>

        <TextView
            android:id="@+id/left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/personal_text_size"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textColor="@color/app_text_color"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="@dimen/personal_text_size"/>

        <TextView
            android:id="@+id/right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/personal_text_size"/>

        <ImageView
            android:id="@+id/right_image"
            android:layout_width="@dimen/custom_linearlayout_right_image_size"
            android:layout_height="@dimen/custom_linearlayout_right_image_size"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/custom_arrow"
            android:layout_width="@dimen/arrow_width_heigh"
            android:layout_height="@dimen/arrow_width_heigh"
            android:layout_marginLeft="3dp"
            android:src="@drawable/arrow_right"/>
    </LinearLayout>
</LinearLayout>